{
  "name": "nebuladesk",
  "version": "3.0.0",
  "description": "The Linux desktop for people who live online",
  "main": "main.js",
  "scripts": {
    "start": "GTK_MODULES='' electron . --disable-gpu-vsync",
    "dev": "GTK_MODULES='' electron . --dev",
    "check-allowlist": "node ./tools/check-adblock-allowlist.js",
    "build": "electron-builder",
    "dist": "electron-builder -wl",
    "dist:linux": "electron-builder -l",
    "dist:win": "electron-builder -w"
  },
  "keywords": [
    "desktop",
    "electron",
    "linux",
    "web-first"
  ],
  "author": "Ron Murphy",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.0.0",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "build": {
    "appId": "com.nebuladesk.desktop",
    "productName": "NebulaDesk",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "System",
      "icon": "build/icons"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icons/icon.ico",
      "artifactName": "NebulaDesk-Setup-${version}.exe"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "diff-match-patch": "^1.0.5",
    "qbjc": "^0.1.2"
  }
}
